{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Node",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "noEmit": true,

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "strict": true,

    "jsx": "react-jsx",

    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "include": ["src"]
}
